{
    "name": "Bitcamp 2024",
    "version": "1.0.0",
    "description": "",
    "manifest_version": 3,
    "author": "Declan Scott, Ryan Shechtman, & Tanay Naik",
    "action":{
        "default_popup": "index.html",
        "default_title": "Bitcamp 2024"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["injection/tabinject.js", "injection/speech2text.js"],
          "css": ["injection/injectedstyle.css"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "options_page": "options/options.html"
}